# Agentic BTE Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI API Key for LLM operations
AGENTIC_BTE_OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Model Configuration
# =============================================================================

# OpenAI model to use (gpt-4o, gpt-4, gpt-3.5-turbo)
AGENTIC_BTE_OPENAI_MODEL=gpt-4o

# Temperature setting for LLM operations (0.0-2.0)
AGENTIC_BTE_OPENAI_TEMPERATURE=0.1

# =============================================================================
# Query Processing Settings
# =============================================================================

# Maximum number of subqueries for decomposition
AGENTIC_BTE_MAX_SUBQUERIES=10

# Maximum results to retrieve per query
AGENTIC_BTE_MAX_RESULTS_PER_QUERY=50

# Minimum confidence threshold for results (0.0-1.0)
AGENTIC_BTE_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# Feature Flags
# =============================================================================

# Enable LLM-based semantic query classification
AGENTIC_BTE_ENABLE_SEMANTIC_CLASSIFICATION=true

# Enable entity ID to name resolution
AGENTIC_BTE_ENABLE_ENTITY_NAME_RESOLUTION=true

# Enable query optimization strategies
AGENTIC_BTE_ENABLE_QUERY_OPTIMIZATION=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode for development
AGENTIC_BTE_DEBUG_MODE=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
AGENTIC_BTE_LOG_LEVEL=INFO

# =============================================================================
# External Services
# =============================================================================

# BTE API base URL
AGENTIC_BTE_BTE_API_BASE_URL=https://bte.transltr.io/v1

# SRI Name Resolver URL
AGENTIC_BTE_SRI_NAME_RESOLVER_URL=https://name-lookup.ci.transltr.io/lookup

# =============================================================================
# Performance Settings
# =============================================================================

# Enable result caching
AGENTIC_BTE_ENABLE_CACHING=true

# Cache time-to-live in seconds
AGENTIC_BTE_CACHE_TTL_SECONDS=3600

# Maximum retries for API calls
AGENTIC_BTE_MAX_RETRIES=3

# Delay between retries in seconds
AGENTIC_BTE_RETRY_DELAY_SECONDS=5